{
  "root": {
    "controller": "StaticController@redirectToLang",
    "routes": {
      "fr": "/",
      "en": "/"
    }
  },
  "home": {
    "controller": "StaticController@home",
    "routes": {
      "fr": "/fr",
      "en": "/en"
    }
  },
  "admin": {
    "controller": "AdminController@display",
    "routes": {
      "fr": "/fr/admin",
      "en": "/en/admin"
    }
  },
  "login": {
    "controller": "AuthController@login",
    "routes": {
      "fr": "/fr/connexion",
      "en": "/en/login"
    }
  },
  "logout": {
    "controller": "AuthController@logout",
    "routes": {
      "fr": "/fr/deconnexion",
      "en": "/en/logout"
    }
  },
  "api": {
    "controller": "ApiController@process",
    "api": true,
    "routes": {
      "fr": "/api/*",
      "en": "/api/*"
    }
  }
}